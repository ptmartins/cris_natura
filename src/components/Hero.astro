---
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';
import heroRight from '../images/hero-right.svg';
import heroGraphics from '../images/hero_graphics_1.svg';
---

<section class="section section--hero">
    <div class="innerWrapper innerWrapper--hero">
        <div class="hero__content">
            <h2 class="hero__title">A saúde é essencial para uma vida plena de felicidade.</h2>
            <a href="#book" class="btn btn--main btn--icon">Venha experimentar  <Icon name="mdi:chevron-right" /> </a>
        </div>
    </div>
    <Image src={ heroGraphics } alt="A bird sitting on a nest of eggs." class="hero__graphics1" width={heroGraphics.width / 1.5} />
</section>

<style lang="less"> 

    .section--hero {
        overflow: hidden;
        padding: 3rem;
        position: relative;
    }

    .innerWrapper--hero {
        height: calc(100vh - 80px - 6rem);
        position: relative;
    }

    .hero__content {
        inset-block-start: 50%;
        position: absolute;
        transform: translateY(-50%);
        width: 85%;
    }

    .hero__title {
        font-size: 5rem;
        font-style: italic;
        font-weight: 400;
        margin-block-end: 4.5rem;
    }

    .hero__graphics1 {
        position: absolute;
        inset-block-end: -0.5rem;
        inset-inline-end: -1.5rem;
    }

</style>