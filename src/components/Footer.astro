---
const date = new Date();
const year = date.getFullYear();
---

<footer class="footer">
    <div class="innerWrapper innerWrapper--footer">
        <div class="footer__top">
        </div>
        <div class="footer__bottom">
            <div class="copyright">
                <span> &copy; { year } - Cristina Gon√ßalves </span>
                <span class="copyright__pipe"> | </span>
                <span> Naturopatia </span>
            </div>
            <div class="developedBy">
                Developed by <a href="https://pedromartins.com.pt" class="u-link" target="_blank"> Pedro Martins </a>
            </div>
        </div>
    </div>
</footer>

<style lang="less">

    .footer {
        padding: 1.5rem;
    }


    .footer__bottom,
    .copyright {
        display: grid;
        grid-template-columns: 1fr;
        margin-block: 1.5rem;
        text-align: center;

        &__pipe {
            display: none;
        }
    }

    @media only screen and (min-width: 640px) {
    
        .copyright {
            display: flex;
            gap: .375rem;
            justify-content: center;

            &__pipe {
                display: inline;
            }
        }
    }

    @media only screen and (min-width: 768px) {
    
        .footer__bottom {
            align-items: center;
            display: flex;
            justify-content: space-between;
        }
    }

</style>